    <data noupdate="1">

        <!--Email template -->
        <record id="shipment_delayed_email" model="email.template">
            <field name="name">Shipment Delayed - Send by Email</field>
            <field name="email_from">${(object.user_id.email or '')|safe}</field>
            <field name="subject">${object.company_id.name|safe} ${object.state in ('draft', 'sent') and 'Quotation' or 'Order'} (Ref ${object.origin or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="stock.picking"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[ 
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

    <p>Hello ${object.partner_id.name},</p>          
    
    <p> Following items from ${object.origin} due on ${object.min_date}: Please take required action. </p>
    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
        &nbsp;&nbsp;<strong>REFERENCES</strong><br/>
        % for move in object.move_ids %}
        &nbsp;&nbsp item name: ${move.product_id.name}
        % endfor %
        &nbsp;&nbsp item quantity: ${move.product_id.quantity}
    </p>
    
            ]]></field>
        </record>
    </data>
</openerp>
