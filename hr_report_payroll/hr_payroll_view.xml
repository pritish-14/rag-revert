<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_payslip_line_paye_deduct_tree" model="ir.ui.view">
            <field name="name">PAYE Deductions</field>
            <field name="model">hr.payslip.line</field>
            <field name="arch" type="xml">
                <tree string="PAYE Deductionse" create="false" delete="false">
                    <field name="staff_no"/>
                    <field name="employee_id"/>
                    <field name="pin_no"/>
                    <field name="total" sum="Amount"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_payslip_line_nhif_tree" model="ir.ui.view">
            <field name="name">NHIF</field>
            <field name="model">hr.payslip.line</field>
            <field name="arch" type="xml">
                <tree string="NHIF" create="false" delete="false">
                    <field name="staff_no"/>
                    <field name="employee_id"/>
                    <field name="nhif_no"/>
                    <field name="birthday"/>                    
                    <field name="total" sum="Amount"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_payslip_line_common_tree" model="ir.ui.view">
            <field name="name">HR Payslip Tree</field>
            <field name="model">hr.payslip.line</field>
            <field name="arch" type="xml">
                <tree string="HR Payslip" create="false" delete="false">
                    <field name="staff_no"/>
                    <field name="employee_id"/>
                    <field name="total" sum="Amount"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_payslip_line_fbt_tree" model="ir.ui.view">
            <field name="name">HR Payslip Tree</field>
            <field name="model">hr.payslip.line</field>
            <field name="arch" type="xml">
                <tree string="HR Payslip" create="false" delete="false">
                    <field name="staff_no"/>
                    <field name="employee_id"/>
                    <field name="total" sum="Fringe Benefit Tax"/>
                </tree>
            </field>
        </record>
    
        <record id="hr_contract_view_form_new" model="ir.ui.view">
            <field name="name">hr.contract.view.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="wage" position="after">
                    <field name="mobile_alw"/>
                    <field name="fuel_alw"/>
                    <field name="travel_alw"/>
                    <field name="icea_deduct"/>
                    <field name="insurance_deduct"/>
                    <field name="stanbic_loan_deduct"/>
                    <field name="qway_sacco"/>
                    <field name="aar_deduct"/>
                    <field name="icea_endowment"/>
                    <field name="nation_sacco"/>
                </field>
            </field>
        </record>            
    
        <record id="view_hr_payslip_form_inherit" model="ir.ui.view">
            <field name="name">view.hr.payslip.form.inherit.flow</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='hr_verify_sheet']" position="replace">
                        <button string="Send Payslip by Email" type="object" name="send_payslip_email" states="done" class="oe_highlight" groups="base.group_hr_user"/>
                    </xpath>
                </data>
            </field>
        </record>
    
    </data>
</openerp>    
