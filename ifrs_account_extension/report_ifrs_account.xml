<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<report auto="False" id="account_journal_ifrs" model="account.journal.period" name="account.journal.period.print1" rml="ifrs_account_extension/report/account_journal.rml" string="Journal" header="False"/>
        <report auto="False" id="account_journal_sale_purchase_ifrs" model="account.journal.period" name="account.journal.period.print.sale.purchase1" rml="ifrs_account_extension/report/account_journal_sale_purchase.rml" string="Sale/Purchase Journal" header="False"/>
        <report auto="False" id="account_central_journal" model="account.journal.period" name="account.central.journal1" rml="ifrs_account_extension/report/account_central_journal.rml" string="Central Journal" header="False"/>
        <report auto="False" id="account_3rdparty_account_balance" menu="False" model="account.account" name="account.partner.balance1" rml="ifrs_account_extension/report/account_partner_balance.rml" string="Partner Balance"/>
        <report auto="False" id="account_3rdparty_ledger" menu="False" model="res.partner" name="account.third_party_ledger1" rml="account/report/account_partner_ledger.rml" string="Partner Ledger"/>
        <report auto="False" id="account_3rdparty_ledger_other" menu="False" model="res.partner" name="account.third_party_ledger_other1" rml="account/report/account_partner_ledger_other.rml" string="Partner Ledger"/>
        
        <report auto="False" id="analytic_journal_print" menu="False"
            model="account.analytic.journal" name="account.analytic.account.journal1"
            rml="ifrs_account_extension/report/analytic_journal.rml" string="Analytic Journal"/>

        <report auto="False" id="account_general_ledger1"
            menu="False" model="account.account" name="account.general.ledger1"
            rml="ifrs_account_extension/report/general_ledger.rml" string="General Ledger Rock"/>
            
        <report auto="False" id="account_general_ledger_landscape11"
            menu="False" model="account.account" name="account.general.ledger_landscape11"
            rml="ifrs_account_extension/report/general_ledger.rml" string="General Ledger"/>
        
        <!-- <report auto="False" id="account_account_balance1" menu="False" model="account.account" name="account.account.balance1" rml="ifrs_account_extension/report/account_balance1.rml" string="Trial Balance"/> -->

        <report auto="False" id="account_account_balance1" menu="False" model="account.account" name="account.account.balance1" rml="ifrs_account_extension/report/trial_balances.rml" string="Trial Balance"/>


        
        <record id="view_ifrs_account_form_journal_items" model="ir.ui.view">
            <field name="name">ifrs.account.journal.items.form.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="description"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_ifrs_account_form_journal_entry" model="ir.ui.view">
            <field name="name">ifrs.account.journal.entry.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="description"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_ifrs_account_tree_journal_items" model="ir.ui.view">
            <field name="name">ifrs.account.journal.items.tree.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="description" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Description</attribute>
                </xpath>
            </field>
        </record>
        
        
        <record id="view_move_form1" model="ir.ui.view">
            <field name="name">account.move.form1</field>
            <field name="model">account.move</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <form string="Account Entry" version="7.0">
                <header>
                    <button name="button_waiting_for_approval" states="draft" string="Send for Approval" type="object" groups="account.group_account_invoice, account.group_account_user, account.group_account_manager, invoice_extension.group_account_md, invoice_extension.group_account_coo"/>
                    <button name="button_reset" states="waiting_for_approval" string="Reset" type="object" groups="account.group_account_manager, invoice_extension.group_account_md, invoice_extension.group_account_coo"/>
                    <button name="button_validate" states="waiting_for_approval" string="Post" type="object" groups="account.group_account_manager, invoice_extension.group_account_md, invoice_extension.group_account_coo"/>
                    <button name="button_cancel" states="posted" string="Cancel Entry" type="object" groups="account.group_account_invoice"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet string="Journal Entries" >
                    <label for="name" class="oe_edit_only" attrs="{'invisible':[('name','=','/')],'readonly':[('group_readonly','=',True)]}"/>
                    <h1>
                        <field name="name" readonly="True" attrs="{'invisible':[('name','=','/')]}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="group_readonly" invisible="1"/>
                            <field name="journal_id" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                            <field name="period_id" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                            <field name="company_id" required="1" groups="base.group_multi_company" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                            <field name="partner_id" invisible="1" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                        </group>
                        <group>
                            <field name="ref" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                            <field name="date" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                            <field name="to_check" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                            <field name="amount" invisible="1" attrs="{'readonly':[('group_readonly','=',True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Journal Items">
                            <field name="line_id" widget="one2many_list"
                              context="{'line_id': line_id , 'journal_id': journal_id }" attrs="{'readonly':[('group_readonly','=',True)]}">
                                <form string="Journal Item" version="7.0">
                                    <group col="6" colspan="4">
                                        <field name="name"/>
                                        <field name="ref"/>
                                        <field name="partner_id" on_change="onchange_partner_id(False,partner_id,account_id,debit,credit,date)"/>

                                        <field name="journal_id"/>
                                        <field name="period_id"/>
                                        <field name="company_id" required="1" groups="base.group_multi_company"/>
                                    </group>
                                    <notebook colspan="4">
                                        <page string="Information">
                                            <group>
                                                <group string="Amount">
                                                    <field name="account_id" domain="[('company_id', '=', parent.company_id), ('type','&lt;&gt;','view'),('type','&lt;&gt;','consolidation')]"/>
                                                    <field name="debit"/>
                                                    <field name="credit"/>
                                                    <field name="quantity"/>
                                                </group>

                                                <group string="Accounting Documents">
                                                    <field name="description"/>
                                                    <field name="invoice"/>
                                                    <field name="move_id" required="False"/>
                                                    <field name="statement_id"/>
                                                </group>

                                                <group string="Dates">
                                                    <field name="date"/>
                                                    <field name="date_maturity"/>
                                                    <field name="date_created"/>
                                                </group>

                                                <group string="Taxes">
                                                    <field name="tax_code_id"/>
                                                    <field name="tax_amount"/>
                                                    <field name="account_tax_id" domain="[('parent_id','=',False)]"/>
                                                </group>

                                                <group string="Currency" groups="base.group_multi_currency">
                                                    <field name="currency_id"/>
                                                    <field name="amount_currency"/>
                                                </group>

                                                <group string="Reconciliation">
                                                    <field name="reconcile_id"/>
                                                    <field name="reconcile_partial_id"/>
                                                </group>

                                                <group string="States">
                                                    <field name="state"/>
                                                    <field name="blocked"/>
                                                </group>

                                                <group groups="analytic.group_analytic_accounting" string="Analytic">
                                                    <field name="analytic_account_id"/>
                                                </group>
                                            </group>
                                            <separator string="Internal Note"/>
                                            <field name="narration"/>
                                        </page>
                                        <page string="Analytic Lines" groups="analytic.group_analytic_accounting">
                                            <field colspan="4" name="analytic_lines" nolabel="1" context="{'default_general_account_id':account_id, 'default_name': name, 'default_date':date, 'amount': (debit or 0.0)-(credit or 0.0)}"/>
                                        </page>
                                    </notebook>
                                </form>
                                <tree colors="blue:state == 'draft';black:state == 'posted'" editable="top" string="Journal Items">
                                    <field name="invoice"/>
                                    <field name="name" string="Description"/>
                                    <field name="partner_id" on_change="onchange_partner_id(False,partner_id,account_id,debit,credit,parent.date,parent.journal_id)"/>
                                    <field name="account_id" domain="[('journal_id','=',parent.journal_id),('company_id', '=', parent.company_id)]"/>
                                    <field name="description" invisible="1"/>
                                    <field name="date_maturity"/>
                                    <field name="debit" sum="Total Debit"/>
                                    <field name="credit" sum="Total Credit"/>
                                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                    <field name="amount_currency"/>
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                    <field name="tax_code_id"/>
                                    <field name="tax_amount"/>
                                    <field name="state"/>
                                    <field name="reconcile_id"/>
                                    <field name="reconcile_partial_id"/>
                                </tree>
                            </field>
                            <field name="narration" attrs="{'readonly':[('state','in',('waiting_for_approval','posted'))]}" colspan="4" placeholder="Add an internal note..." nolabel="1" height="50"/>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</openerp>
