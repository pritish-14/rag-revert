<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_cash_flow_statement_view" model="ir.ui.view">
        	<field name="name">Cash Flow Statement</field>
         	<field name="model">account.cash.flow.statement</field>
         	<field name="inherit_id" ref="account.account_common_report_view"/>
         	<field name="arch" type="xml">
				<data>
		            <xpath expr="//field[@name='fiscalyear_id']" position="replace">
		            	<field name="fiscalyear_id" required="True"/>
		            </xpath>
		            <xpath expr="//notebook/page[@string='Journals']" position="replace">
		            </xpath>
		            <xpath expr="//notebook/page[@string='Filters']" position="replace">
		            </xpath>
		            <xpath expr="//field[@name='target_move']" position="replace">
		            </xpath>
            	</data>
        	</field>
        </record>

        <record id="action_account_cash_flow_statement" model="ir.actions.act_window">
            <field name="name">Cash Flow Statement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.cash.flow.statement</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_cash_flow_statement_view"/>
            <field name="target">new</field>
        </record>

        <menuitem
                icon="STOCK_PRINT"
                name="Cash Flow Statement"
                parent="account.final_accounting_reports"
                action="action_account_cash_flow_statement"
                id="menu_account_cash_flow_statementt"
               />

        <record model="ir.values" id="action_account_cash_flow_statement1">
            <field name="model_id" ref="account.model_account_account" />
            <field name="name">Cash Flow Statement</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('action_account_cash_flow_statement'))" />
            <field name="key">action</field>
            <field name="model">account.account</field>
        </record>

    </data>
</openerp>
