<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="report_bank_balance_view" model="ir.ui.view">
          <field name="name">Bank Balance Report</field>
          <field name="model">report.bank.balance</field>
          <field name="inherit_id" ref="account.account_common_report_view"/>
          <field name="arch" type="xml">
            <data>
            <xpath expr="//notebook/page[@string='Filters']" position="replace">
            </xpath>
            <xpath expr="//field[@name='target_move']" position="replace">
            </xpath>
            </data>
          </field>
        </record>

        <record id="action_report_bank_balance_menu" model="ir.actions.act_window">
            <field name="name">Bank Balance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.bank.balance</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_bank_balance_view"/>
            <field name="target">new</field>
        </record>

        <menuitem
                icon="STOCK_PRINT"
                name="Bank Balance Report"
                parent="account.final_accounting_reports"
                action="action_report_bank_balance_menu"
                id="menu_bank_balance_report"
               />

    </data>
</openerp>
