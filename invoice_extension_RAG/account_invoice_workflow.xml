<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Actions -->
        <record id="act_gm_approval" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">gm_aproval</field>
            <field name="action">write({'state':'awaiting_ceo_approval'})</field>
            <field name="kind">function</field>
        </record>
        <record id="act_finance_approval" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">finance_aproval</field>
            <field name="action">write({'state':'awaiting_gm_approval'})</field>
            <field name="kind">function</field>
        </record>


        <record id="act_invoice_submit" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">invoice_submit</field>
            <field name="action">write({'state':'awaiting_fm_approval'})</field>
            <field name="kind">function</field>
        </record>

        <!-- Transition -->
        
        <record id="transition_submit" model="workflow.transition">
            <field name="act_from" ref="account.act_draft"/>
            <field name="act_to" ref="act_invoice_submit"/>
            <field name="signal">submit</field>
        </record>
        
        <record id="transition_finance_approval" model="workflow.transition">
            <field name="act_from" ref="act_invoice_submit"/>
            <field name="act_to" ref="act_finance_approval"/>
            <field name="signal">finance_approval</field>
        </record>

        <record id="transition_gm_approval" model="workflow.transition">
            <field name="act_from" ref="act_finance_approval"/>
            <field name="act_to" ref="act_gm_approval"/>
            <field name="signal">gm_approval</field>
        </record>
        <record id="ceo_transition" model="workflow.transition">
            <field name="act_from" ref="act_gm_approval"/>
            <field name="act_to" ref="account.act_open"/>
            <field name="signal">ceo_approval</field>
        </record>


         <record id="trans_submit_cancel" model="workflow.transition">
            <field name="act_from" ref="act_invoice_submit"/>
            <field name="act_to" ref="account.act_cancel"/>
            <field name="signal">invoice_cancel</field>
        </record>
        
         <record id="t28" model="workflow.transition">
            <field name="act_from" ref="act_finance_approval"/>
            <field name="act_to" ref="account.act_cancel"/>
            <field name="signal">invoice_cancel</field>
        </record>
         <record id="trans_gm_cancel" model="workflow.transition">
            <field name="act_from" ref="act_gm_approval"/>
            <field name="act_to" ref="account.act_cancel"/>
            <field name="signal">invoice_cancel</field>
        </record>
        
    </data>
</openerp>
