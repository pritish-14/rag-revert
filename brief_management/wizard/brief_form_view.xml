<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_brief_form_apagen" model="ir.ui.view">
            <field name="name">Brief Form</field>
            <field name="model">brief.form</field>
            <field name="arch" type="xml">
             <form string="Brief Form" version="7.0">
             <group>
                <group>
                <field name="background"/>
                <field name="issue"/>
                <field name="selling"/>
                <field name="objective"/>
                <field name="connect"/>
                <field name="big_insights"/>
                <field name="tagline"/>
                <field name="feel"/>
                <field name="like"/>
                <field name="different"/>
                <field name="guidelines"/>
                <field name="persuasive_idea"/>
                <field name="conclusion"/>
                </group>
            </group>                
                <footer>
                    <button name="brief_form_done" string="Save" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_view_brief_form_apagen" model="ir.actions.act_window">
            <field name="name">Brief Form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">brief.form</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
<!--            <field name="view_id" ref="view_brief_form_apagen"/> -->
            <field name="target">new</field>
        </record>

    </data>
</openerp>
