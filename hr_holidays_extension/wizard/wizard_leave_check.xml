<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="leave_check_view" model="ir.ui.view">
            <field name="name">Check Leave</field>
            <field name="model">wizard.leave.check</field>
            <field name="arch" type="xml">
            <form string="Are you still want to apply?" version="7.0">
                <separator string="Are you sure?"/>
                <h3>
                <label string="Your do not have enough sick leaves which number of days you requested.
                If you still want to apply and such leave is approved then leave will be first deducted
                from your sick leave(if any) and rest of the leave will be deducted from Annual Leave."/>
                </h3>
                <footer>
                    <button string="Proceed" name="proceed" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Close" name="action_cancel" type="object" class="oe_highlight"/>
                </footer>
            </form>
            </field>
        </record>
    </data>
</openerp>
